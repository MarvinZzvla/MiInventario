<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#141820"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">


            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mairyextrabold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="29/04/2024"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/facturaNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mairyextrabold"
                android:text="#1"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/dateText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/listaVentas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mairyextralight"
                android:text="○Camiseta\n ○Pantalon \n +1 Mas..."
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/totalVentaText"
                app:layout_constraintTop_toBottomOf="@+id/dateText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/totalVentaText"/>

            <TextView
                android:id="@+id/totalVentaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mairyextralight"
                android:text="$486"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/facturaNumber"
                app:layout_constraintStart_toStartOf="@id/listaVentas"
                app:layout_constraintHorizontal_bias="0.95"
                android:layout_alignParentEnd="true"
                app:layout_constraintEnd_toEndOf="parent"

               />

            <TextView
                android:id="@+id/totalGananciaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mairyextralight"
                android:text="▲$286"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/totalVentaText"
                app:layout_constraintStart_toStartOf="@id/listaVentas"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintEnd_toEndOf="parent"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>