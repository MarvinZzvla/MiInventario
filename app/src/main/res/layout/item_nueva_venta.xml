<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/recycleNuevaVenta_nameProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintWidth_default="percent"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/mairyextralight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recycleNuevaVenta_cantidadProducto"
        app:layout_constraintWidth_percent="0.43"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombre: La Cajita fELIZ De Mac Donals y el pato Lucas" />
    <TextView
        android:id="@+id/recycleNuevaVenta_cantidadProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintWidth_percent="0.22"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        app:layout_constraintWidth_default="percent"
        android:fontFamily="@font/mairyextralight"
        app:layout_constraintLeft_toRightOf="@+id/recycleNuevaVenta_nameProducto"
        app:layout_constraintRight_toLeftOf="@+id/recycleNuevaVenta_totalProducto"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cantidad: 20" />
    <TextView
        android:id="@+id/recycleNuevaVenta_totalProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="10dp"
        app:layout_constraintWidth_default="percent"
        android:textColor="@color/white"
        app:layout_constraintWidth_percent="0.25"
        android:fontFamily="@font/mairyextralight"
        app:layout_constraintLeft_toRightOf="@+id/recycleNuevaVenta_cantidadProducto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Total : $45000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleNuevaVenta_nameProducto"
        android:background="#494949"/>

</androidx.constraintlayout.widget.ConstraintLayout>